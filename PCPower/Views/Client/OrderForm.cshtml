@model PCPower.Models.Order

@{
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    ViewBag.Title = "OrderForm";
}


<h2>OrderForm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Order</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.fk_Shop_Id, "Shop", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("fk_Shop_Id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.fk_Shop_Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.fk_Receipt_Id, "Receipt Id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("fk_Receipt_Id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.fk_Receipt_Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.fk_Client_Id, "Customer name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("fk_Client_Id", null, "Client username", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.fk_Client_Id, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
        @Html.LabelFor(model => model.isFinished, "Is finished", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("isFinished", null, "Is Finished", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.isFinished, "", new { @class = "text-danger" })
        </div>
    </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" onclick="return confirm('Are you sure?')" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "openOrders")
</div>
