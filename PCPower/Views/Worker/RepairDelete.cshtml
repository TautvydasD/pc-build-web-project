@model PCPower.Models.Repair
@{
    Layout = "~/Views/Shared/_WorkerLayout.cshtml";
    ViewBag.Title = "Repairs form";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Repair</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.fk_Order_Id, "Order ID")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fk_Order_Id)
        </dd>
        <dt>
            @Html.LabelFor(model => model.fk_Worker_Id, "Worker ID")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fk_Worker_Id)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Number, "Repair number")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt>
            @Html.LabelFor(model => model.Status, "Repair status")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

@using (Html.BeginForm("Delete", "Worker"))
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" />
        |
        @Html.ActionLink("Cancel", "openWorkerRepairsList")
    </div>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
